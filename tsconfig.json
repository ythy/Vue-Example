{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true, 
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strictFunctionTypes": false,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
          "@/*": [
                "src/*"
            ],
        }

    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]

}